{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 20,

  "modules-left": [
    "custom/omarchy", // "custom/timer",
    "hyprland/workspaces",
    "custom/update",
    // "custom/voxtype",
    "custom/screenrecording-indicator",
  ],

  "modules-center": [
    "custom/analog-clock",

    // "hyprland/window",
    "cava#left",
    "mpris",
    "cava#right",
  ],

  "modules-right": [
    "tray",
    // "group/tray-expander",

    "pulseaudio",

    // "power-profiles-daemon",
