  "pulseaudio": {
    "format": "VOL {volume}% {icon}",
    "on-click": "omarchy-launch-or-focus-tui wiremix",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "scroll-step": 5,
    "format-muted": "  {volume}% {icon}",
    "headphone": "  {volume}% {icon}",
    "phone": "  {volume}% {icon}",
    "phone-muted": "  {volume}% {icon}",
    "portable": "  {volume}% {icon}",
    "format-icons": {
      "default": [
