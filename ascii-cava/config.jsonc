  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "on-click": "activate",
    "format": "{name} {windows}",
    "format-window-separator": " ",
    "window-rewrite-default": "{}",
    "workspace-taskbar": {
      "enable": true,
      "format": "{icon}",
      "icon-size": 15,
      "icon-theme": "YAMIS",
    },
    "sort-by-number": true,
    "persistent-workspaces": {
      "*": 5,
    },
  },
  "hyprland/window": {
    "format": "{title}",
    "tooltip": true,
    "max-length": 45,

    "rewrite": {
      " - ": "",
      "(.*) - dev\\.zed\\.Zed": "$1",
      "(.*) - Cursor": "$1",
      "(.*) - Google Chrome": "$1",
      "(.*nvim)...(.*)": "$2",
      "(.*code) - (.*)": "$1",
      "^.*btop( .*|$)": "BTOP $1",
      "^.*unimatrix( .*|$)": "MATRIX $1",
      "(.*) - Spotify": "$1",
      "(.*) - com.mitchellh.ghostty": "$1",
      "(.*) - Alacritty": "$1",
      "(.*Discord)...(.*)": "$2",
      "(.*) - Vesktop": "$1",
      "(.*) - org.gnome.Nautilus": "$1",
      "(.*Steam)...(.*)": "$1",
      "(.*imv)...(.*).. (.*)": "$2",
      "(.*) - com.obsproject.Studio": "$1",
      "(.*) - mpv": "$1",
    },
  },

